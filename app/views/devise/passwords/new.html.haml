.row
  .col-xs-12.col-md-5.login.col-md-offset-4
    .page-header
      %h1
        = t '.title'
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      .form-group
        .input-group
          .input-group-addon
            .glyphicon.glyphicon-envelope
          = f.email_field :email, autofocus: true, class: 'form-control', placeholder: User.human_attribute_name(:email)
      .form-group
        = f.submit t('.send'), class: 'btn btn-warning btn-block'
