= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group
    .input-group
      .input-group-addon
        .glyphicon.glyphicon-user
      = f.text_field :name, class: 'form-control', placeholder: User.human_attribute_name(:name)
  .form-group
    .input-group
      .input-group-addon
        .glyphicon.glyphicon-envelope
      = f.email_field :email, autofocus: true, class: 'form-control', placeholder: User.human_attribute_name(:email)
  .form-group
    .input-group
      .input-group-addon
        .glyphicon.glyphicon-asterisk
      = f.password_field :password, autocomplete: 'off',  class: 'form-control', placeholder: User.human_attribute_name(:password)
  .form-group
    .input-group
      .input-group-addon
        .glyphicon.glyphicon-asterisk
      = f.password_field :password_confirmation, autocomplete: 'off',  class: 'form-control', placeholder: User.human_attribute_name(:password_confirmation)
  .form-group
    = f.submit t('.sign_up'), class: 'btn btn-success btn-block'
