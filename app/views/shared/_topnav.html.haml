%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      %button.navbar-toggle{'data-target' => '.navbar-collapse', 'data-toggle' => 'collapse', type: 'button'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: main_app.root_path}
        = image_tag 'logo.png', alt: 'Helena Demo'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.pull-nav-right
        %li.active
          = link_to t('.home'), main_app.root_path
        %li
          = link_to t('.about'), 'https://github.com/gurix/helena'
        %li
          = link_to t('.contact'), 'https://github.com/gurix'
        - if user_signed_in?
          %li
            = link_to t('.sign_out'), main_app.destroy_user_session_path, method: :delete
